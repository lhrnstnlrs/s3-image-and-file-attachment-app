<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @post.title %></h1>
      <p><%= @post.content %></p>
    </div>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <h4>PICTURES</h4>
    	<% @post.pictures.each do |picture| %>
				<a class="thumbnail" href="#">
					<%= image_tag picture.image.url, :class => "img-responsive"%>
				</a>
        <div class="links">
          <%= link_to 'Show', picture %>
          <%= link_to 'Remove', picture, :method => :delete, :data => { :confirm => 'Are you sure?', :remote => true }, class: 'remove' %>
        </div>
			<% end %>
      <h4>FILES</h4>
      <% @post.attachments.each do |attachment| %>
        <ul class="attachment list-group">
          <li class="list-group-item">
            <%= attachment.file_file_name %>
            <div class="links">
              <%= link_to 'Open', attachment.file.url, class:'btn btn-link' %>
              <%= link_to 'Remove', attachment, :method => :delete, :data => { :confirm => 'Are you sure?', :remote => true}, class: 'remove btn btn-link' %>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
